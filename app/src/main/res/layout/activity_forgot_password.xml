<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    tools:context=".ForgotPasswordActivity">

    <EditText
        android:id="@+id/textEmailForgotPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/rounded_text_register_login"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendEmailForgotPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_register_login"
        android:text="Send Password Reset Email"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/textEmailForgotPassword"
        app:layout_constraintStart_toStartOf="@+id/textEmailForgotPassword"
        app:layout_constraintTop_toBottomOf="@+id/textEmailForgotPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>