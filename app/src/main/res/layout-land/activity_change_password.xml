<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50">

    <EditText
        android:id="@+id/textPasswordChangeOld"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/rounded_text_register_login"
        android:ems="10"
        android:hint="Old Password"
        android:inputType="textPersonName|textPassword"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textPasswordChangeNew"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/rounded_text_register_login"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPersonName|textPassword"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordChangeOld" />

    <EditText
        android:id="@+id/textPasswordChangeConfirm"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_text_register_login"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPersonName|textPassword"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textPasswordChangeNew"
        app:layout_constraintStart_toStartOf="@+id/textPasswordChangeNew"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordChangeNew" />

    <Button
        android:id="@+id/changePasswordButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_register_login"
        android:text="Change Password"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/textPasswordChangeConfirm"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textPasswordChangeConfirm"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordChangeConfirm" />
</androidx.constraintlayout.widget.ConstraintLayout>