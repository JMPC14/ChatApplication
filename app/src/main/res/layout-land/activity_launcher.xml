<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="#4CAF50">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#4CAF50">

        <ImageView
            android:id="@+id/birdLauncher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/image_bird"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/image_bird" />

        <Button
            android:id="@+id/loginLauncher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/rounded_button_launcher"
            android:text="Log In"
            android:textColor="#4CAF50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/birdLauncher" />

        <Button
            android:id="@+id/createAccountLauncher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_button_launcher"
            android:text="Create Account"
            android:textColor="#4CAF50"
            app:layout_constraintEnd_toEndOf="@+id/loginLauncher"
            app:layout_constraintStart_toStartOf="@+id/loginLauncher"
            app:layout_constraintTop_toBottomOf="@+id/loginLauncher" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>